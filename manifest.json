{
  "name": "Platzi Video Wide Extension",
  "description": "Mueve la barra de materiales y comentarios hacia abajo para que tengas mayor campo de visi√≥n del video.",
  "version": "0.4",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage","activeTab", "scripting"],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon120.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon120.png"
  }
}
